<Window x:Class="APUIOOPAssignment.Admin_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APUIOOPAssignment"
        mc:Ignorable="d"
        Title="Admin_Page" ResizeMode="NoResize" Height="760" Width="916">
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210*"/>
                <ColumnDefinition Width="683*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="46*"/>
                <RowDefinition Height="0"/>
            </Grid.RowDefinitions>
            <Image HorizontalAlignment="Left" Height="734" VerticalAlignment="Top" Width="895" Grid.ColumnSpan="2" Source="Images\Admin BG.jpg" Grid.RowSpan="2" Margin="0,0,-2.2,0"/>
            <Button x:Name="btnAddClub" Background="#33d3b7" HorizontalAlignment="Left" Margin="131,237,0,0" VerticalAlignment="Top" Width="311" Height="233" Grid.ColumnSpan="2" Click="btnClub_Click">
                <StackPanel>
                    <Image Source="Images/btn club.png" Height="146" Width="256" />

                </StackPanel>
            </Button>
            <Button x:Name="btnViewMember" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="287.4,380,0,0" Width="311" Background="#69efff" Click="btnViewMember_Click" Grid.Column="1">
                <StackPanel>
                    <Image Source="Images/view as member.png" Height="86" Width="256"/>

                </StackPanel>
            </Button>
            <Button x:Name="btnEditRepresentative" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="287.4,237,0,0" Width="311" Background="#ffcf4d" Click="btnEditRepresentative_Click" Grid.Column="1">
                <StackPanel>
                    <Image Source="/Images/Edit Representative.png" Height="95" Width="256"/>
                </StackPanel>
            </Button>
            <Button x:Name="exit" Content="Exit" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="201,620,0,0" Height="40" Width="100" Background="#FFFF6565" FontFamily="Berlin Sans FB" FontSize="24" Click="exit_Click" Grid.Column="1"/>


        </Grid>
    </ScrollViewer>
</Window>
